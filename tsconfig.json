{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "strict": true,
    "target": "es2015",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "compileOnSave": false
}
